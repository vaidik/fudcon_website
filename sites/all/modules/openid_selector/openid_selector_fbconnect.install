/**
 * @file
 * Install hooks for openid_selector_fbconnect.module.
 */

/**
 * Implementation of hook_install().
 */
function openid_selector_fbconnect_install() {
  // Set the weight higher than openid_selector.module / libraries,
  // so the corresponding JS gets added after the others.
  db_query("UPDATE {system} SET weight = 1 WHERE name = 'openid_selector_fbconnect'");
}

/**
 * Implementation of hook_update_N().
 */
function openid_selector_fbconnect_update_6100() {
  $ret = array();
  $ret[] = update_sql("UPDATE {system} SET weight = 1 WHERE name = 'openid_selector_fbconnect'");
  return $ret;
}
